<Window x:Class="Custo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="700"
        ResizeMode="NoResize">
    <Grid Margin="1,-1,-1,1">
        <Grid.Background>
            <ImageBrush ImageSource="/LOG.png"/>
        </Grid.Background>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Margin="135,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="28" FontSize="20"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Margin="135,167,0,0" VerticalAlignment="Top" Width="215" Height="28" FontSize="16"/>
        
        <Label Content="USUÁRIO" HorizontalAlignment="Left" Margin="34,87,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="SENHA" HorizontalAlignment="Left" Margin="37,163,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.482,0.618" FontSize="20" FontWeight="Bold"/>
        <Label Content="SISTEMA PARA GERAÇÃO DE CUSTO POR OPERAÇÃO DE COSTURA" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Foreground="Black" FontFamily="Adobe Caslon Pro Bold" Background="{x:Null}"/>
        <Button x:Name="btnEntrar" Content="ENTRAR" HorizontalAlignment="Left" Margin="166,250,0,0" VerticalAlignment="Top" Width="154" Height="29" FontSize="16" FontWeight="Bold" Background="#FFCCF6FF" BorderBrush="#FFCCF6FF" Click="btnEntrar_Click"/>
    </Grid>
</Window>

